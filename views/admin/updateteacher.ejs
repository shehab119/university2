    <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card card-body">
            <h3 class="text-center">Update Teacher Account</h3>
            <form action="/admin/addteachers" method="POST">

              <div  class="form-group">
                  <label for="name">Teacher ID</label>
                  <input type="text" class="form-control" name="tid" value="<%=info[0].tid%>" required>
                </div>
              <div class="form-group">
                <label for="name">Teacher Name</label>
                <input type="text" class="form-control" name="tname" value="<%=info[0].tname%>" required>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="tpass" class="form-control" value="<%=info[0].tpass%>"  required>
              </div>
              <button type="submit" class="btn btn-primary">Update Account</button>
            </form>
             </div>
        </div>
