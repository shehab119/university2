<body>
    
    <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card card-body">
            <h3 class="text-center">Update Student Account</h3>
            <form action="/admin/addstudents" method="POST">
              <div class="form-group">
                <label for="name">Student ID</label>
                <input type="text" class="form-control" name="sid" value="<%=info[0].sid%>" required>
              </div>

              <div class="form-group">
                <label for="name">Student Name</label>
                <input type="text" class="form-control" name="sname" value="<%=info[0].sname%>"required>
              </div>

              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="spass" class="form-control" value="<%=info[0].spass%>"  required>
              </div>
              <button type="submit" class="btn btn-primary">Update Student</button>
            </form>
            </div>
        </div>
      </div>
      <div class="text-center">
      <a href="/admin/studentdetails"><input type="submit" value="Cancle" class="btn btn-danger"></a>
      <a href="/admin/menu"><input type="submit" value="Admin Page" class="btn btn-success"></a>
        </div>
      

      
